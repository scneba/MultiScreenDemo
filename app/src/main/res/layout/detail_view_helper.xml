<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:elevation="10dp"
    android:clickable="false"
    card_view:cardCornerRadius="3dp"
    >

    <RelativeLayout
        android:id="@+id/card_linear_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:clickable="false"
        >

        <ImageView
            android:id="@+id/imv_product_img"
            android:clickable="true"
            android:layout_width="100dp"
            android:src="@drawable/cool"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/imv_product_img"
            android:gravity="center"
            android:padding="5dp"
            android:textAppearance="@android:style/TextAppearance.Holo.Widget.ActionBar.Title"
            android:textSize="20sp"
            tools:text="Cool" />

    </RelativeLayout>

</android.support.v7.widget.CardView>